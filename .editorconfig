# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 2
tab_width = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 60

[*.md]
max_line_length = 60
trim_trailing_whitespace = false

[*.yml]
indent_size = 2
indent_style = space
